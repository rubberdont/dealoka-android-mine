<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Foreground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/TopBar"
        android:background="@color/Frame">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />
        <com.dealoka.lib.control.SquareLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <ImageButton
                android:id="@+id/btn_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_header"
                android:scaleType="fitXY"
                android:contentDescription="@string/blank" />
        </com.dealoka.lib.control.SquareLayout>
        <TextView
            android:id="@+id/lbl_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        style="@style/TextHeader" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Foreground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Foreground"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="left|top"
                style="@style/Text" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>