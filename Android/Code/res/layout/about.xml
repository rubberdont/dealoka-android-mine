<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Frame"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/TopBar"
        android:background="@color/Frame">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />
        <com.dealoka.lib.control.SquareLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <ImageButton
                android:id="@+id/btn_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_header"
                android:scaleType="fitXY"
                android:contentDescription="@string/blank" />
        </com.dealoka.lib.control.SquareLayout>
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:text="@string/title_about"
	        style="@style/TextHeader" />
    </RelativeLayout>
    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/Foreground">
	    <LinearLayout
	        android:id="@+id/lay_app"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:orientation="vertical">
	        <ImageView
	            android:id="@+id/img_app"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ic_logo_black"
	            android:layout_marginTop="10dp"
	            android:layout_gravity="center_horizontal"
	            android:contentDescription="@string/blank" />
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:orientation="horizontal">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/text_label_version"
	                android:textSize="16sp"
	                android:textColor="#000000" />
	            <TextView
	                android:id="@+id/lbl_version"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:textSize="16sp"
	                android:textStyle="bold"
	                android:textColor="#000000" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:orientation="horizontal">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/text_label_user_email"
	                android:textSize="16sp"
	                android:textColor="#000000" />
	            <TextView
	                android:id="@+id/lbl_user_email"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:textSize="16sp"
	                android:textStyle="bold"
	                android:textColor="#000000" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:orientation="horizontal">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/text_label_email_header"
	                android:textSize="16sp"
	                android:textColor="#000000" />
	            <TextView
	                android:id="@+id/lbl_email"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textSize="16sp"
	                android:textColor="#000000" />
	        </LinearLayout>
	        <Button
	            android:id="@+id/btn_tc"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:padding="10dp"
	            android:text="@string/button_about_tc"
	            style="@style/ButtonBordered"
	            android:textColor="#000000" />
	        <RelativeLayout
	            android:id="@+id/lay_powered"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp">
	            <TextView
	                android:id="@+id/lbl_powered"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/text_label_powered"
	                android:textSize="20sp"
	                android:textStyle="bold|italic" />
	        </RelativeLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>